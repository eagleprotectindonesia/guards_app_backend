{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^prisma:generate", "prisma:generate"],
      "env": ["DATABASE_URL", "NEXT_PUBLIC_GOOGLE_MAPS_API_KEY"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^build", "type-check"]
    },
    "type-check": {
      "dependsOn": ["^build", "^prisma:generate", "prisma:generate"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "prisma:generate": {
      "dependsOn": ["^prisma:generate"],
      "env": ["DATABASE_URL"],
      "cache": false
    },
    "db:push": {
      "dependsOn": ["^prisma:generate"],
      "env": ["DATABASE_URL"],
      "cache": false
    }
  }
}
